<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pesquisar Livros</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/livraria.css">
</head>
<body>

    <h1 class="m2 p-5 text-center">Buscador de Livros</h1>

    <form action="/buscar" method="GET">
    <div class="dados-livro">
    <div class="input-group mb-3">
        <label for="titulo">Titulo do Livro</label>
        <input type="text" name="titulo" class="form-control col-sm-2 ml-2 inputs" aria-describedby="inputGroup-sizing-default">
        <input type="radio" class="ml-4" name="campo-pesquisa" value="titulo">
      </div>

      <div class="input-group mb-3">
        <label for="ano">Ano do Livro</label>
        <input type="text"  name="ano" class="form-control col-sm-2 ml-4 inputs" aria-describedby="inputGroup-sizing-default">
        <input type="radio" class="ml-4" name="campo-pesquisa" value="ano">
    </div>

    <button type="submit" class="btn btn-primary button " id="buscar-livro">Buscar</button>
    </div>
</form>

<div class="resultado">
    <% if (error) { %>
        <div class="alert alert-danger ml-2 col-sm-2 text-center" role="alert">
            <%= error %>
        </div>
    <% } else if (livro_encontrado) { %>
        <h2 class="mb-3"><b>Livros Encontrados:</b></h2>
        <ul class="list-unstyled mt-4">
            <% if (Array.isArray(livro_encontrado)) { %>
                <% livro_encontrado.forEach(livro => { %>
                    <li class="mb-4">
                        <h3 class="mb-1">Título: <%= livro.titulo %></h3>
                        <p class="mb-1">Autor: <%= livro.autor %></p>
                        <p class="mb-1">Ano: <%= livro.ano %></p>
                    </li>
                <% }); %>
            <% } else { %>
                <li>Título: <%= livro_encontrado.titulo %></li>
                <li>Autor: <%= livro_encontrado.autor %></li>
                <li>Ano: <%= livro_encontrado.ano %></li>
            <% } %>
        </ul>
    <% } %>
        
</div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
</body>
</html>